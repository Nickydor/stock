<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>New Stock Management !</title>
    <style>
        .list-group-item {
            color: blue;
        }
        .list-group-item:hover {
            background-color: #f8f9fa;
        }
    </style>
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this item?");
        }
    </script>
</head>
<body>
<div class="container">
    <h1 class="mt-5">Items Stock List</h1>
    <form action="/add" method="POST" class="mb-3">
        <input type="text" name="item" required class="form-control" placeholder="Add a new item">
        <button type="submit" class="btn btn-primary mt-2">Add</button>
    </form>
    <ul class="list-group">
        <% if (items.length === 0) { %>
            <li class="list-group-item text-center">No items in stock. Please add some!</li>
        <% } else { %>
            <% items.forEach((item, index) => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= item %>
                    <div>
                        <a href="/edit/<%= index %>" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/delete/<%= index %>" method="POST" style="display:inline;" onsubmit="return confirmDelete();">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </li>
            <% }) %>
        <% } %>
    </ul>
</div>
</body>
</html>
